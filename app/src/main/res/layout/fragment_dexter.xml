<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_request_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="Request All"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_camara"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Camera"
        app:layout_constraintBottom_toTopOf="@+id/btn_contacts"
        app:layout_constraintEnd_toEndOf="@+id/btn_contacts"
        app:layout_constraintStart_toStartOf="@+id/btn_contacts" />

    <TextView
        android:id="@+id/tv_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="@string/unknown"
        app:layout_constraintBottom_toBottomOf="@+id/btn_camara"
        app:layout_constraintStart_toEndOf="@+id/btn_camara"
        app:layout_constraintTop_toTopOf="@+id/btn_camara" />

    <Button
        android:id="@+id/btn_contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="Contacts"
        app:layout_constraintBottom_toBottomOf="@+id/btn_request_all"
        app:layout_constraintStart_toEndOf="@+id/btn_request_all"
        app:layout_constraintTop_toTopOf="@+id/btn_request_all" />

    <TextView
        android:id="@+id/tv_contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unknown"
        app:layout_constraintBottom_toBottomOf="@+id/btn_contacts"
        app:layout_constraintStart_toStartOf="@+id/tv_camera"
        app:layout_constraintTop_toTopOf="@+id/btn_contacts" />

    <Button
        android:id="@+id/btn_audio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Audio"
        app:layout_constraintEnd_toEndOf="@+id/btn_contacts"
        app:layout_constraintStart_toStartOf="@+id/btn_contacts"
        app:layout_constraintTop_toBottomOf="@+id/btn_contacts" />

    <TextView
        android:id="@+id/tv_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unknown"
        app:layout_constraintBottom_toBottomOf="@+id/btn_audio"
        app:layout_constraintStart_toStartOf="@+id/tv_contacts"
        app:layout_constraintTop_toTopOf="@+id/btn_audio" />
</androidx.constraintlayout.widget.ConstraintLayout>