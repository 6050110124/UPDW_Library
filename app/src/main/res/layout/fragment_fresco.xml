<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Load Image" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/my_image_view"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                fresco:placeholderImage="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=".PNG"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/my_image_view2"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                fresco:fadeDuration="500"
                fresco:placeholderImage="@drawable/ic_launcher_background"
                fresco:roundingBorderWidth="2dp"
                fresco:viewAspectRatio="1.33"
                android:layout_marginTop="20sp"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=".JPGs"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/my_image_view3"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                fresco:placeholderImage="@drawable/ic_launcher_background"
                fresco:roundedCornerRadius="100dp"
                fresco:roundingBorderColor="@color/colorAccent"
                android:layout_marginTop="20sp"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Corners and Circles"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/my_image_view4"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                fresco:placeholderImage="@drawable/ic_launcher_background"
                fresco:roundedCornerRadius="100dp"
                fresco:roundingBorderColor="@color/colorAccent"
                android:layout_marginTop="20sp"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=".GIF"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>